@model Rocky.Models.Product

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    @*multipart form data, cause we'll be passing images also*@

    <!--In certain instances where you are working with more complex data types compared to Product type,
        we might need to return to the controller the id of the obj we are currently working on. It is done with including this:



        at the top of the form.
        -->
  
        <input asp-for="Id" hidden />
    

    <!-- Since the name of the file is the same as the action we are gonna make we do not need to specify  asp-action="Edit" after <form method="post">-->
    <div class="border p-3">
        <!-- Crating the summary of the validations to be used in this page  we can have it show ModelOnly or All error messages-->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-primary pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 text-center">
                        <input asp-for="Name" class="form-control" disabled />

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8 text-center">
                        <input asp-for="Price" class="form-control" disabled />

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ShortDesc"></label>
                    </div>
                    <div class="col-8 text-center">
                        <input asp-for="ShortDesc" class="form-control " disabled />

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8 text-center">
                        <textarea asp-for="Description" class="form-control summernote" disabled></textarea>

                    </div>
                </div>




                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8 text-center">
                        <input asp-for="Category.Name" class="form-control" disabled />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8 text-center">
                        <input asp-for="ApplicationType.Name" class="form-control" disabled />
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col text-center">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col text-center">
                            <a asp-action="Index" class="btn btn-primary w-100">Back</a>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-3 container">
                <div class="row">
                    @if (Model.Id != 0)
                    {
                        <img src="@WebConst.IMGPath@Model.Image" class="col" style="border-radius: 5px; border:1px solid #bbb;" />
                    }
                </div>
            </div>

        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

<!--
    
Creating custom css to make summernote work
    

-->
<style>
    /*fix dropdown*/
    .note-btn-group .dropdown-menu > li > a {
        display: block;
        padding: 3px 20px;
        clear: both;
        font-weight: normal;
        line-height: 1.42857143;
        color: #333;
        white-space: nowrap;
    }

    .note-popover .popover-content .note-color .dropdown-toggle,
    .note-editor .panel-heading.note-toolbar .note-color .dropdown-toggle {
        width: 20px;
        padding-left: 1px;
    }

    /*fix icon button*/
    .note-editor .btn-default {
        color: #333;
        background-color: #fff;
        border-color: #ccc;
    }

        .note-editor .btn-default:hover {
            color: #333;
            background-color: #e6e6e6;
            border-color: #adadad;
        }

    .note-editor .dropdown-toggle:after {
        content: initial;
    }

    /*fix background toolbar*/
    .panel-heading {
        color: #333;
        background-color: #f5f5f5;
        border-bottom: 1px solid #ddd;
        border-top-left-radius: 3px;
        border-top-right-radius: 3px;
    }

    .note-toolbar {
        color: #333;
        background-color: #f5f5f5;
        border-bottom: 1px solid #ddd;
        border-top-left-radius: 3px;
        border-top-right-radius: 3px;
    }

    /*fix modal*/
    .note-editor .modal-header {
        display: block;
    }

    /*fix popover*/
    .note-popover {
        display: none;
    }
</style>

<script>
    $(document).ready(function () {
        $(".summernote").summernote({
            height: 250,
            toolbar: [
                ['style', ['bold', 'italic', 'underline', 'clear']],
                ['font', ['strikethrough', 'superscript', 'subscript']],
                ['fontsize', ['fontsize']],
                ['color', ['color']]
            ]

        });
        $('.summernote').summernote('disable');
    });

    

</script>