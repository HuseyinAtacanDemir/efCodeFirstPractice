@model IEnumerable<Rocky.Models.Product>

@{
    ViewData["Title"] = "Product";
}

<div class="continer p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp;&nbsp;Create Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Product name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Application Type</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Price</td>
                    <td>@obj.Category.Name</td>
                    <td>@obj.ApplicationType.Name</td>
                    <td>@obj.ShortDesc</td>

                    <td class="text-center">
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="btn-group col-md-8">
                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                            </div>
                            <div class="col-md-2"></div>
                        </div>
                    </td>
                </tr>
                }
            </tbody>


        </table>
    }
    else
    {
        <p>No Product Exists!</p>
    }

</div>