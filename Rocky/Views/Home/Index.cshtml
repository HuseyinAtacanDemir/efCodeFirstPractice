@model Rocky.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" daata-filter="all">All</button>
        @foreach (var obj in Model.Categories){
            <button class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ', '_')">
                @obj.Name
            </button>
        }
    </div>
    <br />
    <div class="row">
        @foreach (var prod in Model.Products)
        {
            <partial name="_ProductCard" model="prod"/>
            //display all the propducts using a partial view, so that we can reuse that view somewhere else

        }
    </div>
</div>
