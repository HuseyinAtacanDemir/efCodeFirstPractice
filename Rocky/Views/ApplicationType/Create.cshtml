@model Rocky.Models.ApplicationType

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-primary pl-3">Add Application</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 text-center">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col text-center">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col text-center">
                            <a asp-action="Index" class="btn btn-primary w-100" value="Create">Back</a>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-4">
                <div class="form-group row"><div class="col text-center"></div></div>
                <div class="form-group row"><div class="col text-center"></div></div>
                <div class="form-group row"><div class="col text-center"></div></div>
            </div>

        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}