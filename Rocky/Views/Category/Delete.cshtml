@model Rocky.Models.Category

<form method="post" asp-action="DeletePost">
    <!--In certain instances where you are working with more complex data types compared to Category type,
        we might need to return to the controller the id of the obj we are currently working on. It is done with including this:



        at the top of the form.
        -->
    <input asp-for="Id" hidden />
    <!-- Since the name of the file is the same as the action we are gonna make we do not need to specify  asp-action="Edit" after <form method="post">-->
    <div class="border p-3">
        <!-- Crating the summary of the validations to be used in this page  we can have it show ModelOnly or All error messages-->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-primary pl-3">Delete Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 text-center">
                        <input asp-for="Name" disabled class="form-control" />
                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8 text-center">
                        <input asp-for="DisplayOrder" disabled class="form-control" />
                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col text-center">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col text-center">
                            <a asp-action="Index" class="btn btn-primary w-100">Back</a>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-4">
                <div class="form-group row"><div class="col text-center"></div></div>
                <div class="form-group row"><div class="col text-center"></div></div>
                <div class="form-group row"><div class="col text-center"></div></div>
            </div>

        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}